<Window x:Class="Labb3_NET22.CreateQuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_NET22"
        mc:Ignorable="d"
        Title="CreateQuizWindow" Height="900" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Margin="20" Padding="5" Grid.ColumnSpan="2" >
            <TextBlock x:Name="QuizEnterInfoBlock" FontSize="18" Text="To select correct answer to the question , mark checkbox next to the answer" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <Border Grid.Row="1" Grid.ColumnSpan="2" Margin="20" Padding="5">
            <TextBox x:Name="QuestionBox" Text="Enter question" HorizontalAlignment="center"  />
        </Border>
        <Border Grid.Row="2" Margin="20" Padding="5">
            <TextBox x:Name="TextBoxOptionOne" Text="Enter answer 1" HorizontalAlignment="right" TextWrapping="Wrap"/>
        </Border>
        <Border Grid.Row="3" Margin="20" Padding="5">
            <TextBox x:Name="TextBoxOptionTwo" Text="Enter answer 2" HorizontalAlignment="right" TextWrapping="Wrap"/>
        </Border>
        <Border Grid.Row="4" Margin="20" Padding="5" >
            <TextBox x:Name="TextBoxOptionThree" Text="Enter answer 3" HorizontalAlignment="right" TextWrapping="Wrap"/>
        </Border>
        <Border Grid.Row="5" Margin="20" Padding="5" >
            <TextBox x:Name="TextBoxOptionFour" Text="Enter answer 4" HorizontalAlignment="right" TextWrapping="Wrap"/>
        </Border>
        <Border Grid.Row="2 " Grid.Column="1" Margin="20" Padding="5">
            <CheckBox x:Name="CheckboxOne"/>
        </Border>
        <Border Grid.Row="3 " Grid.Column="1" Margin="20" Padding="5">
            <CheckBox x:Name="CheckboxTwo"/>
        </Border>
        <Border Grid.Row="4 " Grid.Column="1" Margin="20" Padding="5">
            <CheckBox x:Name="CheckboxThree"/>
        </Border>
        <Border Grid.Row="5 " Grid.Column="1" Margin="20" Padding="5">
            <CheckBox x:Name="CheckboxFour"/>
        </Border>
        <Border Grid.Row="6" Grid.Column="0" Margin="20" Padding="5" >
            <Button x:Name="SubmitQuestionButton" Content="Submit Question"/>
        </Border>
        <Border Grid.Row="6" Grid.Column="1" Margin="20" Padding="5" >
            <CheckBox x:Name="LastQuestionCheckbox"/>
        </Border>
        <Border Grid.Row="6" Grid.Column="1" Margin="20" Padding="5" >
            <TextBlock x:Name="LastQuestionTextBlock" Text="Last question? check the checkbox" HorizontalAlignment="center"/>
        </Border>


    </Grid>
</Window>
